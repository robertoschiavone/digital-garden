{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-trailing-spaces": "error",
    "sort-imports": [
      "error",
      {
        "allowSeparatedGroups": true
      }
    ],
    "spaced-comment": "error"
  }
}
